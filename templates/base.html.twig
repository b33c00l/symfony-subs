<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('build/app.scss') }}">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css"/>
    </head>
    <body>
        {% block nav %}
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-8 offset-2 btn-block mt-1 p-0 text-right">
                <a class="btn btn-primary mr-1" href="{{path('subscribers')}}">Subscribers</a>
                <a class="btn btn-success mr-1" href="{{path('categories')}}">Categories</a>
                <a class="btn btn-primary" href="{{path('logout')}}">Logout</a>
            </div>
        {% else %}
            <div class="col-8 offset-2 btn-block mt-1 p-0 text-right">
                <a class="btn btn-primary" href="{{path('login')}}">Login page</a>
            </div>
        {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <footer class="row justify-content-lg-center mt-5">&copy; Copyright 2018 Paulius Sakalauskas for Metasite</footer>
        {% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
        <script
        src="https://code.jquery.com/jquery-3.3.1.slim.js"
        integrity="sha256-fNXJFIlca05BIO2Y5zh1xrShK3ME+/lYZ0j+ChxX2DA="
        crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>